FROM golang:1.23-alpine

WORKDIR /app

RUN go install github.com/githubnemo/CompileDaemon@latest

# Copy go mod files
COPY go.mod  ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 7676

# Use air for live reload
CMD ["CompileDaemon", "--build=go build -o main .", "--command=./main"]